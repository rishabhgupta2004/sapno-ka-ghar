
 <% layout("/layouts/boilerplate") -%>
 
   <style>
    #filters{
     display: flex;
     flex-wrap: wrap;
     align-items: center;
    }
    .filter{
      text-align: center;
      margin-right:2rem ;
      margin-top: 2rem;
      opacity: 0.7;

    }
    .filter:hover{
opacity:1 ;
cursor: pointer;
    }
    .filter p{
      font-size: 0.8rem;
    }
    #taxinfo{
      display:none;
    }
    .taxtoogle{
      border-radius: 1rem;
      border: 1px solid black;
      height:3.5rem ;
      padding:1rem;
      margin-left: 0rem;
      display: flex;
    }
    .darkmode{
      border-radius: 1rem;
      border: 1px solid rgb(0, 0, 0);
      height:3.5rem ;
      margin-left: 0.5rem;
      padding:1rem;
      
      display: flex;
    }

    
   </style>
    <div id="filters">
      <div class="filter">
       <div> <i class='bx bxs-hot'></i></div>
       <p> Trending</p>
      </div>
      <div class="filter">
        <div><i class='bx bxs-bed' ></i></div>
        <p> Rooms</p>
       </div>
       <div class="filter">
        <div> <i class='bx bxs-business' ></i></div>
        <p>ICONICS Cities</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-mountain-city"></i></div>
         <p>Mountains</p>
        </div>
        <div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castle</p>
         </div>
         <div class="filter">
           <div><i class="fa-solid fa-person-swimming"></i></div>
           <p>Arctic pools</p>
          </div>
          <div class="filter">
            <div> <i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
           </div>
           <div class="filter">
             <div><i class="fa-solid fa-umbrella-beach"></i></div>
             <p>beach</p>
            </div>
            <div class="filter">
              <div><i class="fa-solid fa-landmark-dome"></i></div>
              <p>DOME</p>
             </div>
             
             <div class="filter">
                <div><i class="fa-solid fa-ship"></i></i></div>
                <p>boat</p>
               </div>
             
             
            
            <div class="taxtoogle">
              <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
               
                <label class="form-check-label" for="flexSwitchCheckReverse">Dispaly total after taxes</label>
              </div>
              </div>
             
            </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) {%>
      <a href ="/listings/<%=listing.id %>" class="listing-link">
    <div class="card col listing-card " >
      <img src="<%= listing.image.url  %>" class="card-img-top" alt="..."style="height:20rem">
      <div class="card-img-overlay"></div>

      <div class="card-body">
       
        <p class="card-text">
         <b> <%= listing.title %></b><br/>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
        <i class="taxinfo"> &nbsp;+18%GST</i>
        </p>
        
      </div>
    </div> 
      </a>
    <% } %>  
    </div>  


    
<script>
  let priceswitch=document.getElementById("flexSwitchCheckDefault")
priceswitch.addEventListener("click",()=>{
  let taxinfo=document.getElementsByClassName("taxinfo")
for(info of taxinfo){
  if(info.style.display!="inline"){
  info.style.display="inline"
  }else{
    info.style.display="none"
  }
}
})


</script>

